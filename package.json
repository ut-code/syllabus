    "check": "bunx biome check .",
    "fix": "bunx biome check . --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.9",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.6.1"
  }
}
